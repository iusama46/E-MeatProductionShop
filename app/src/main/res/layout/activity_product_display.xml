<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.consumer.ProductDisplayActivity">


    <androidx.cardview.widget.CardView
        android:id="@+id/lay_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:elevation="6dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"
                android:src="@mipmap/ic_launcher" />

            <View

                android:id="@+id/img_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/img"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:background="@color/black"
                android:paddingVertical="8dp" />


            <RelativeLayout
                android:id="@+id/lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_divider"
                android:layout_marginHorizontal="24dp"
                android:paddingHorizontal="4dp"
                android:paddingTop="8dp"
                android:paddingBottom="4dp">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SHop Cheicken"

                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/price"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="Rs. 120/-"
                    android:textColor="@color/purple_500"
                    android:textSize="22sp"
                    android:textStyle="bold" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/lay_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lay"
                android:layout_marginHorizontal="24dp"
                android:layout_marginBottom="8dp"

                android:paddingHorizontal="4dp"

                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="Frozen"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"

                    android:text="Expiry dAte: 22/02/2102"
                    android:textAllCaps="false" />
            </RelativeLayout>


            <TextView
                android:id="@+id/qty"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lay_2"
                android:layout_marginHorizontal="25dp"
                android:paddingBottom="8dp"
                android:text="Qty"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/lay_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/qty"
                android:layout_marginHorizontal="24dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical"

                android:paddingHorizontal="4dp"

                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="Description:"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"

                    android:text="desc"
                    android:textAllCaps="false" />
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lay_3"
                android:layout_marginHorizontal="24dp"
                android:layout_marginBottom="8dp"
                android:paddingHorizontal="4dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">


                <Button
                    android:id="@+id/add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:paddingHorizontal="24dp"
                    android:text="Add to cart"
                    android:textAllCaps="false"
                    android:textSize="17sp" />
            </RelativeLayout>
        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>